<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_vertical">

    <android.support.wearable.view.CircledImageView
        android:id="@+id/circle"
        android:layout_width="@dimen/settings_item_color_circle_size"
        android:layout_height="@dimen/settings_item_color_circle_size"
        android:layout_marginLeft="@dimen/md_listitem_margin_left"
        app:circle_radius="@dimen/settings_item_color_circle_radius"/>
    
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/md_listitem_height"
        android:textColor="@color/dialog_list_item_title"
        android:textSize="@dimen/md_listitem_textsize"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/md_listitem_margin_left"
        android:layout_marginRight="@dimen/md_dialog_frame_margin"
        tools:text="Item"/>

</LinearLayout>